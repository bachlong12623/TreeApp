<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ngày bắt đầu trồng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu trồng"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx/xx/20xx"
            android:textSize="14sp"
            android:paddingBottom="12dp" />

        <!-- Tình trạng cây -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tình trạng cây"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_plant_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cây non"
            android:textSize="14sp"
            android:paddingBottom="12dp" />

        <!-- Ngày tưới nước dự kiến -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày tưới nước dự kiến"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_next_watering_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx/xx/20xx (? lít/cây)"
            android:textSize="14sp"
            android:paddingBottom="12dp" />

        <!-- Điều kiện thời tiết -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điều kiện thời tiết"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_weather_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:textSize="14sp"
            android:paddingBottom="12dp" />

        <!-- Khuyến cáo chăm sóc cây -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khuyến cáo chăm sóc cây"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/btn_care_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- Dịch bệnh phổ biến -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dịch bệnh phổ biến"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tv_common_diseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa"
            android:textSize="14sp"
            android:paddingBottom="12dp" />

        <!-- Cách xử lý dịch bệnh -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cách xử lý dịch bệnh"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <Button
            android:id="@+id/btn_disease_treatment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here"
            android:textColor="@android:color/holo_blue_dark" />

    </LinearLayout>
</ScrollView>
